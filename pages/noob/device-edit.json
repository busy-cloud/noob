{
  "title": "编辑设备",
  "template": "form",
  "toolbar": [
    {
      "type": "button",
      "label": "选择产品ID",
      "action": {
        "type": "dialog",
        "app": "iot",
        "page": "product-choose",
        "after_close": "this.editor.patchValue({product_id: result.id})"
      }
    },
    {
      "type": "button",
      "label": "选择小白ID",
      "action": {
        "type": "dialog",
        "app": "noob",
        "page": "noob-choose",
        "after_close": "this.editor.patchValue({noob_id: result.id})"
      }
    },
    {
      "type": "button",
      "label": "选择连接ID",
      "action": {
        "type": "dialog",
        "app": "noob",
        "page": "link-choose",
        "params_func": "{noob_id: this.toolbar.value.noob_id}",
        "after_close": "this.editor.patchValue({link_id: result.id})"
      }
    }
  ],
  "fields": [
    {
      "key": "id",
      "label": "ID",
      "type": "text"
    },
    {
      "key": "name",
      "label": "名称",
      "type": "text"
    },
    {
      "key": "description",
      "label": "说明",
      "type": "text"
    },
    {
      "key": "product_id",
      "label": "产品ID",
      "type": "text",
      "change_action": {
        "type": "script",
        "script": "setTimeout(()=>this.load_product(), 100)"
      }
    },
    {
      "key": "noob_id",
      "label": "小白ID",
      "type": "text"
    },
    {
      "key": "link_id",
      "label": "连接ID",
      "type": "text"
    },
    {
      "key": "station",
      "label": "地址",
      "type": "object",
      "placeholder": "需要先选择产品ID",
      "children": []
    },
    {
      "key": "disabled",
      "label": "禁用",
      "type": "switch"
    }
  ],
  "load_api": "noob/device/:id",
  "load_success": "setTimeout(()=>this.load_product(), 200)",
  "submit_api": "noob/device/:id",
  "submit_success": "this.navigate('/page/noob/noob-detail?id='+data.noob_id)",
  "mount": "",
  "methods": {
    "load_product": "this.editor.value.product_id && this.request.get('iot/product/'+this.editor.value.product_id).subscribe(res=>{if(!res.error) this.load_protocol_station(res.data.protocol)})",
    "load_protocol_station": ["p", "this.request.get('iot/protocol/'+p+'/station').subscribe(res=>{this.content.fields[6].children=res.data.fields; setTimeout(()=>this.editor.rebuild(), 200)})"]
   }
}